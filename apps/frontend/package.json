{
  "name": "@kompass/frontend",
  "version": "1.0.0",
  "description": "KOMPASS Frontend - React PWA",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
