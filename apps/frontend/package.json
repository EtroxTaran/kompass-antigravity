    "pouchdb-browser": "^8.0.1",
    "pouchdb-find": "^8.0.1",
    "react-hook-form": "^7.49.2",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.3",
    "date-fns": "^3.0.6",
    "clsx": "^2.0.0",
