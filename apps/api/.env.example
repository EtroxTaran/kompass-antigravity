# ===========================================
# KOMPASS API Environment Configuration
# ===========================================

# Server
PORT=3000
NODE_ENV=development

# CouchDB Connection
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=password
COUCHDB_DATABASE=kompass

# Authentication Mode
# Set to 'false' to enable Keycloak OIDC authentication
# Set to 'true' for development mock authentication
USE_MOCK_AUTH=true

# Keycloak OIDC Configuration (used when USE_MOCK_AUTH=false)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=kompass
KEYCLOAK_CLIENT_ID=kompass-api

# Keycloak Admin API (for user synchronization)
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=

# User Sync Options
KEYCLOAK_SYNC_ON_STARTUP=false

# Logging
LOG_LEVEL=debug
