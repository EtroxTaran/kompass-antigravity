{
  "name": "@kompass/shared",
  "version": "1.0.0",
  "description": "Shared types, utilities, and validation for KOMPASS",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./constants/rbac.constants": {
      "types": "./dist/constants/rbac.constants.d.ts",
      "default": "./dist/constants/rbac.constants.js"
    },
    "./constants/*": {
      "types": "./dist/constants/*.d.ts",
      "default": "./dist/constants/*.js"
    },
    "./types/entities/*": {
      "types": "./dist/types/entities/*.d.ts",
      "default": "./dist/types/entities/*.js"
    },
    "./types/enums": {
      "types": "./dist/types/enums/index.d.ts",
      "default": "./dist/types/enums/index.js"
    },
    "./types/enums/*": {
      "types": "./dist/types/enums/*.d.ts",
      "default": "./dist/types/enums/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "default": "./dist/types/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "default": "./dist/utils/*.js"
    }
  },
  "scripts": {
    "build": "tsc --build --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "sh -c 'eslint \"src/**/*.ts\" --fix ${ESLINT_MAX_WARNINGS:+--max-warnings=$ESLINT_MAX_WARNINGS}'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "date-fns": "^3.0.6"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
